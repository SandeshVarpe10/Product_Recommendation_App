<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bootstrap Navbar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .navbar-center {
      flex: 1;
      display: flex;
      justify-content: center;
    }
    .navbar-search {
      width: 60%;
    }
    .category-bar {
      overflow-x: auto;
      white-space: nowrap;
      background: #f8f9fa;
      border-bottom: 1px solid #ddd;
    }
    .category-item {
      display: inline-block;
      text-align: center;
      padding: 10px 20px;
      color: #555;
      font-weight: 500;
    }
    .category-item:hover {
      color: #007bff;
      cursor: pointer;
    }
    .category-item i {
      display: block;
      font-size: 20px;
      margin-bottom: 4px;
    }
    .category-bar {
    overflow-x: auto;
    white-space: nowrap;
    background: #f0f2f5;
    border-bottom: 1px solid #ccc;
    padding: 15px;
  }

  .category-button {
    border: none;
    padding: 10px 20px;
    margin-right: 10px;
    border-radius: 50px;
    font-weight: 500;
    color: white;
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
  }

  .category-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
  }

  .category-button i {
    font-size: 18px;
  }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-light shadow-sm">
    <div class="container-fluid">
      <!-- Left: Logo -->
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="https://img.freepik.com/premium-photo/modern-logo-stylish-shopping-cart-icon_1108533-68784.jpg?semt=ais_hybrid&w=740" alt="Logo" width="40" height="40" class="d-inline-block align-text-top me-2">
        MyShop
      </a>

      <!-- Toggle for mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Center + Right -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Center: Category + Search bar -->
        <div class="navbar-center mt-2 mt-lg-0">
          <!-- Category Dropdown -->
          <select class="form-select category-select me-2" aria-label="Category">
            <option selected>All Categories</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.category_name %></option>
            <% }) %>
          </select>

          <!-- Search Input -->
          <input class="form-control navbar-search" type="search" placeholder="Search products..." aria-label="Search">
        </div>

        <!-- Right: Buttons -->
        <div class="ms-auto d-flex gap-2 mt-2 mt-lg-0">
          <button class="btn btn-outline-primary">
            <% if (!user) { %>
              <a href="/login">Sign In</a>
            <% } else { %>
              <a href="/profile">My Profile</a>
            <% } %>
          </button>
          <button class="btn btn-primary position-relative">
            Cart
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              2
            </span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Category Bar -->
  <div class="category-bar d-flex">
  <% if (categories && categories.length > 0) { %>
    <% categories.forEach(cat => { %>
      <button class="category-button">
        <i class="bi bi-tag-fill"></i>
        <%= cat.category_name %>
      </button>
    <% }) %>
  <% } else { %>
    <div class="text-muted">No Categories Found</div>
  <% } %>
</div>


  <!-- Bootstrap 5 JS Bundle (with Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
