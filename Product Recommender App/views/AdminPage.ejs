<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .option-card {
      position: relative;
      background: linear-gradient(to right, #0052D4, #65C7F7);
      color: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      text-align: center;
      transition: transform 0.3s ease;
      cursor: pointer;
    }

    .option-card:hover {
      transform: translateY(-5px);
    }

    .dropdown-box {
      margin-top: 10px;
      display: none;
      background: white;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      animation: fadeIn 0.3s ease-in-out;
    }

    .dropdown-box a {
      display: block;
      padding: 12px 20px;
      color: #333;
      font-weight: 500;
      text-decoration: none;
      border-bottom: 1px solid #eee;
    }

    .dropdown-box a:hover {
      background: #007bff;
      color: white;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .navbar-custom {
      background: linear-gradient(to right, #1c1c1c, #434343);
    }

    .navbar-custom .navbar-brand,
    .navbar-custom .btn {
      color: white !important;
    }

    .navbar-custom .btn:hover {
      background-color: #ffffff22;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="https://img.icons8.com/external-flatart-icons-outline-flatarticons/64/ffffff/external-cart-ecommerce-flatart-icons-outline-flatarticons.png" width="40" height="40" class="me-2">
        MyShop Admin
      </a>
      <div class="ms-auto">
        <a href="/profile" class="btn btn-outline-light">My Profile</a>
      </div>
    </div>
  </nav>

  <!-- Dashboard -->
  <div class="container mt-5" id="main-container">
    <h3 class="mb-4 text-center">Admin Dashboard</h3>
    <div class="row g-4 justify-content-center" id="dashboard">

      <!-- Product Management -->
      <div class="col-md-5">
        <div class="option-card" onclick="toggleDropdown('product-dropdown')">
          <h5>🛒 Product Management</h5>
          <div class="dropdown-box" id="product-dropdown">
            <a href="/add-product">➕ Add Product</a>
            <a href="/view-products">📦 View Products</a>
          </div>
        </div>
      </div>

      
      <div class="col-md-5">
        <div class="option-card bg-success" onclick="toggleDropdown('category-dropdown')">
          <h5>📂 Category Management</h5>
          <div class="dropdown-box" id="category-dropdown">
            <a href="/add-category">➕ Add Category</a>
            <a href="/view-category">📁 View Categories</a>
          </div>
        </div>
      </div>

      <!-- Customer Management -->
      <div class="col-md-5">
        <a href="/view-customers" class="text-decoration-none">
          <div class="option-card bg-warning text-dark">
            <h5>👤 Customer Management</h5>
          </div>
        </a>
      </div>

      <!-- Admin Management -->
      <div class="col-md-5">
        <a href="/admin/add-admin" class="text-decoration-none">
          <div class="option-card bg-danger">
            <h5>🔑 Admin Management</h5>
          </div>
        </a>
      </div>

    </div>
  </div>

  <script>
    function toggleDropdown(id) {
      const allDropdowns = document.querySelectorAll('.dropdown-box');
      allDropdowns.forEach(box => {
        if (box.id === id) {
          box.style.display = (box.style.display === 'block') ? 'none' : 'block';
        } else {
          box.style.display = 'none';
        }
      });
    }

    document.addEventListener("click", function (e) {
      const cards = document.querySelectorAll('.option-card');
      let isClickInsideCard = false;
      cards.forEach(card => {
        if (card.contains(e.target)) {
          isClickInsideCard = true;
        }
      });
      if (!isClickInsideCard) {
        document.querySelectorAll(".dropdown-box").forEach(box => box.style.display = "none");
      }
    });
  </script>

</body>
</html>
