<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Registration</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

  <style>
    body {
      background: #f1f1f1;
    }

    .register-container {
      max-width: 500px;
      margin: 50px auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .form-group label {
      font-weight: 500;
    }

    .btn-primary {
      width: 100%;
    }

    .mt-3 a {
      text-decoration: none;
    }
  </style>
</head>
<body>

  <div class="register-container">
    <h2>Register</h2>

    <form action="/registerdata" method="POST" enctype="multipart/form-data">

      <!-- Full Name -->
      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" name="name" class="form-control" required placeholder="Enter your full name">
      </div>

      <!-- Email -->
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" name="email" class="form-control" required placeholder="Enter your email">
      </div>

      <!-- Password -->
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" required placeholder="Enter a strong password">
      </div>

      <!-- Age -->
      <div class="form-group">
        <label for="age">Age</label>
        <input type="number" name="age" class="form-control" min="1" required placeholder="Enter your age">
      </div>

      <!-- Photo -->
      <div class="form-group">
        <label for="photo">Upload Profile Photo</label>
        <input type="file" name="photo" class="form-control-file">
      </div>

      <!-- Created At (read-only) -->
      <div class="form-group">
        <label for="created_at">Created At</label>
        <input type="text" name="created_at" class="form-control" readonly value="<%= new Date().toLocaleString() %>">
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary">Register</button>

      <p class="mt-3 text-center">Already have an account? <a href="/login">Login here</a></p>
    </form>

    <% if (msg) { %>
      <p class="text-center text-danger mt-2"><%= msg %></p>
    <% } %>
  </div>

</body>
</html>
