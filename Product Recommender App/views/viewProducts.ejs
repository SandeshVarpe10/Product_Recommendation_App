<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Products</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 20px;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #fdfbfb, #ebedee);
    }

    h2 {
      text-align: center;
      font-size: 32px;
      color: #2c3e50;
      margin-bottom: 30px;
    }

    h3 {
      margin-top: 50px;
      color: #1abc9c;
      font-size: 26px;
      border-left: 6px solid #1abc9c;
      padding-left: 15px;
    }

    .subcategory-container {
      display: flex;
      overflow-x: auto;
      gap: 20px;
      padding: 15px 10px;
      scroll-behavior: smooth;
    }

    .subcategory-card {
      flex: 0 0 auto;
      width: 220px;
      height: 250px;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      padding: 10px;
      background: linear-gradient(135deg, #ffffff, #f8f9fa);
    }

    .subcategory-card:hover {
      transform: scale(1.07);
      box-shadow: 0 16px 28px rgba(0,0,0,0.2);
      cursor: pointer;
    }

    .subcategory-card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .subcategory-card h4 {
      font-size: 18px;
      color: #34495e;
      margin: 10px 0 0;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* Scrollbar style for subcategory scroll */
    .subcategory-container::-webkit-scrollbar {
      height: 8px;
    }

    .subcategory-container::-webkit-scrollbar-track {
      background: #f0f0f0;
      border-radius: 10px;
    }

    .subcategory-container::-webkit-scrollbar-thumb {
      background: #1abc9c;
      border-radius: 10px;
    }

    .subcategory-container::-webkit-scrollbar-thumb:hover {
      background: #16a085;
    }
  </style>
</head>
<body>

  <h2>All Categories & Subcategories</h2>

  <% categories.forEach(category => { %>
    <h3><%= category.category_name %></h3>
    <div class="subcategory-container">
      <% subcategories
           .filter(sub => sub.category_id === category.id)
           .forEach(sub => { %>
        <a href="/products/<%= sub.subcategory_id %>">
          <div class="subcategory-card">
            <img src="/images/<%= sub.image %>" alt="<%= sub.subcategory_name %>">
            <h4><%= sub.subcategory_name %></h4>
          </div>
        </a>
      <% }); %>
    </div>
  <% }); %>

</body>
</html>
