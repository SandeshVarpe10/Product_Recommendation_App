<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update Product</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #e6f0ff, #f0f5ff);
      padding: 30px;
    }

    .form-container {
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 700px;
      margin: auto;
    }

    .form-title {
      text-align: center;
      font-weight: 600;
      color: #004085;
      margin-bottom: 25px;
    }

    label {
      font-weight: 500;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: none;
    }

    .btn-custom {
      background: #28a745;
      color: #fff;
      font-weight: 500;
      transition: 0.3s;
    }

    .btn-custom:hover {
      background: #218838;
    }

    .product-image-preview {
      height: 100px;
      margin-bottom: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .section-divider {
      border-top: 1px solid #ccc;
      margin: 20px 0;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2 class="form-title">Update Product Details</h2>

    <form action="/productupdatesave/<%= product.product_id %>" method="POST" enctype="multipart/form-data">
      <!-- Hidden Product ID -->
      <input type="hidden" name="id" value="<%= product.id %>">

      <!-- Product Name -->
      <div class="form-group">
        <label>Product Name</label>
        <input type="text" name="name" class="form-control" value="<%= product.product_name %>" required>
      </div>

      <!-- Current Image -->
      <div class="form-group">
        <label>Current Product Image</label><br>
        <img src="/images/<%= product.product_image %>" class="product-image-preview" alt="Product Image">
        <input type="hidden" name="existingImage" value="<%= product.product_image %>">
      </div>

      <!-- Upload New Image -->
      <div class="form-group">
        <label>Change Product Image (Optional)</label>
        <input type="file" name="image" class="form-control" accept="image/*">
      </div>

      <!-- Subcategory Dropdown -->
      <div class="form-group">
        <label>Select Subcategory</label>
        <select name="subcategoryId" class="form-control" required>
          <option value="">-- Choose Subcategory --</option>
          <% subcategories.forEach(function(subcat) { %>
            <option value="<%= subcat.subcategory_id %>" 
              <%= subcat.subcategory_id === product.subcategory_id ? 'selected' : '' %>>
              <%= subcat.subcategory_name %>
            </option>
          <% }); %>
        </select>
      </div>

      <div class="section-divider"></div>

      <!-- Brand -->
      <div class="form-group">
        <label>Brand</label>
        <input type="text" name="brand" class="form-control" value="<%= product.brand %>" required>
      </div>

      <!-- Description -->
      <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control" rows="3" required><%= product.description %></textarea>
      </div>

      <!-- Stock Unit -->
      <div class="form-group">
        <label>Stock Unit</label>
        <select name="stockUnit" class="form-control" required>
          <option value="">-- Choose Unit --</option>
          <option value="kilogram" <%= product.stock_unit === 'kilogram' ? 'selected' : '' %>>Kilogram</option>
          <option value="piece" <%= product.stock_unit === 'piece' ? 'selected' : '' %>>Piece</option>
          <option value="liter" <%= product.stock_unit === 'liter' ? 'selected' : '' %>>Liter</option>
        </select>
      </div>

      <!-- Stock Quantity -->
      <div class="form-group">
        <label>Stock Quantity</label>
        <input type="number" name="stock" class="form-control" min="0" step="1" value="<%= product.stock %>" required>
      </div>

      <!-- Price -->
      <div class="form-group">
        <label>Price (per unit)</label>
        <input type="number" name="price" class="form-control" step="0.01" min="0" value="<%= product.price %>" required>
      </div>

      <!-- Discount -->
      <div class="form-group">
        <label>Discount (%)</label>
        <input type="number" name="discount" class="form-control" step="0.01" min="0" value="<%= product.discount %>" required>
      </div>

      <!-- Organic -->
      <div class="form-group">
        <label>Is Organic?</label>
        <select name="organic" class="form-control" required>
          <option value="">-- Select --</option>
          <option value="true" <%= product.organic === true || product.organic === 'true' ? 'selected' : '' %>>True</option>
          <option value="false" <%= product.organic === false || product.organic === 'false' ? 'selected' : '' %>>False</option>
        </select>
      </div>

      <button type="submit" class="btn btn-custom btn-block">Update Product</button>
    </form>
  </div>

</body>
</html>
