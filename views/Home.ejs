<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bootstrap Navbar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .navbar-center {
      flex: 1;
      display: flex;
      justify-content: center;
    }
    .navbar-search {
      width: 60%;
    }
    .category-bar {
      overflow-x: auto;
      white-space: nowrap;
      background: #f8f9fa;
      border-bottom: 1px solid #ddd;
    }
    .category-item {
      display: inline-block;
      text-align: center;
      padding: 10px 20px;
      color: #555;
      font-weight: 500;
    }
    .category-item:hover {
      color: #007bff;
      cursor: pointer;
    }
    .category-item i {
      display: block;
      font-size: 20px;
      margin-bottom: 4px;
    }
    .category-bar {
    overflow-x: auto;
    white-space: nowrap;
    background: #f0f2f5;
    border-bottom: 1px solid #ccc;
    padding: 15px;
  }

  .category-button {
    border: none;
    padding: 10px 20px;
    margin-right: 10px;
    border-radius: 50px;
    font-weight: 500;
    color: white;
    background: linear-gradient(135deg, #6fcfff 0%, #337eff 100%);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
  }

  .category-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    background: linear-gradient(135deg, #2575fc 0%, #c0f9ff 100%);
  }

  .category-button i {
    font-size: 18px;
  }

      body {
      margin: 0;
      padding: 20px;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #dceeff, #0c668f);
    }

    h2 {
      text-align: center;
      font-size: 32px;
      color: #ffffff;
      margin-bottom: 30px;
    }

    h3 {
      margin-top: 50px;
      color: #00ac89;
      font-size: 26px;
      border-left: 6px solid #1abc9c;
      padding-left: 15px;
    }

    .subcategory-container {
      display: flex;
      overflow-x: auto;
      gap: 20px;
      padding: 15px 10px;
      scroll-behavior: smooth;
    }

    .subcategory-card {
      flex: 0 0 auto;
      width: 220px;
      height: 250px;
      background: #ffffff;
      border-radius: 16px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      padding: 10px;
      background: linear-gradient(135deg, #ffffff, #f8f9fa);
    }

    .subcategory-card:hover {
      transform: scale(1.07);
      box-shadow: 0 16px 28px rgba(0,0,0,0.2);
      cursor: pointer;
    }

    .subcategory-card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .subcategory-card h4 {
      font-size: 18px;
      color: #34495e;
      margin: 10px 0 0;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    /* Scrollbar style for subcategory scroll */
    .subcategory-container{
      background-color: #ffffff;
      padding: 30px;
      border-radius: 15px;
    }
    .subcategory-container::-webkit-scrollbar {
      height: 8px;
    }

    .subcategory-container::-webkit-scrollbar-track {
      background: #f0f0f0;
      border-radius: 10px;
    }

    .subcategory-container::-webkit-scrollbar-thumb {
      background: #1abc9c;
      border-radius: 10px;
    }

    .subcategory-container::-webkit-scrollbar-thumb:hover {
      background: #16a085;
    }
    #searchResults, #searchRes {
      display: none;
    }
    .searchCard{
      height: 350px;
      width: 250px;
    }
     .price-box {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 3px;
    }

    .original-price {
      font-size: 14px;
      color: #999;
      text-decoration: line-through;
    }

    .discounted-price {
      font-size: 20px;
      font-weight: bold;
      color: #2ecc71;
    }

    .you-save {
      font-size: 14px;
      color: #e67e22;
      margin-bottom: 8px;
    }

    .unit {
      font-size: 14px;
      font-weight: bold;
      color: #3498db;
    }
    .discount-badge {
      top: 10px;
      left: 10px;
      background: #e74c3c;
      color: white;
      padding: 5px 10px;
      font-size: 13px;
      border-radius: 5px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-light shadow-sm">
    <div class="container-fluid">
      <!-- Left: Logo -->
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="https://img.freepik.com/premium-photo/modern-logo-stylish-shopping-cart-icon_1108533-68784.jpg?semt=ais_hybrid&w=740" alt="Logo" width="40" height="40" class="d-inline-block align-text-top me-2">
        MyShop
      </a>

      <!-- Toggle for mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Center + Right -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Center: Category + Search bar -->
        <div class="navbar-center mt-2 mt-lg-0">
         <!-- Search Form -->
<form action="/search-live" method="GET" class="d-flex navbar-center mt-2 mt-lg-0">
  <!-- Category Dropdown (optional, for filtering by category) -->
  <select class="form-select category-select me-2" name="category">
    <option value="">All Categories</option>
    <% categories.forEach(cat => { %>
      <option value="<%= cat.id %>"><%= cat.category_name %></option>
    <% }) %>
  </select>

  <!-- Search Input -->
<input
  class="form-control navbar-search"
  type="search"
  id="searchInput"
  placeholder="Search products..."
  aria-label="Search"
>

</form>
        <!-- Right: Buttons -->
        <div class="ms-auto d-flex gap-2 mt-2 mt-lg-0">
          <button class="btn btn-outline-primary">
            <% if (!user) { %>
              <a href="/login">Sign In</a>
            <% } else { %>
              <a href="/profile">My Profile</a>
            <% } %>
          </button>
          <button class="btn btn-primary position-relative">
            Cart
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              2
            </span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Category Bar -->
  <div class="category-bar d-flex ">
  <% if (categories && categories.length > 0) { %>
    <% categories.forEach(cat => { %>
      <button class="category-button">
        <i class="bi bi-tag-fill"></i>
        <%= cat.category_name %>
      </button>
    <% }) %>
  <% } else { %>
    <div class="text-muted">No Categories Found</div>
  <% } %>
</div>
<br><br>

 <h2>All Categories & Subcategories</h2>

<h3 id="searchRes" class="searchResult">Search Results</h3>
<div id="searchResults" class="subcategory-container">
</div>

  <% categories.forEach(category => { %>
    <h3><%= category.category_name %></h3>
    <div class="subcategory-container">
      <% subcategories
           .filter(sub => sub.category_id === category.id)
           .forEach(sub => { %>
        <a href="/products/<%= sub.subcategory_id %>">
          <div class="subcategory-card">
            <img src="/images/<%= sub.image %>" alt="<%= sub.subcategory_name %>">
            <h4><%= sub.subcategory_name %></h4>
          </div>
        </a>
      <% }); %>
    </div>
  <% }); %>

  <!-- Bootstrap 5 JS Bundle (with Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  document.getElementById('searchInput').addEventListener('keyup', function () {
  const query = this.value.trim();
  const container = document.getElementById('searchResults');
  const searchRes=document.getElementById('searchRes');

  if (query.length === 0) {
    container.innerHTML = '';
    container.style.display = 'none'; 
    searchRes.style.display = 'none'; 
    return;
  }

const category = document.querySelector('.category-select').value;
fetch(`/search-live?query=${encodeURIComponent(query)}&category=${encodeURIComponent(category)}`)
  .then(res => res.json())
  .then(data => {
    container.innerHTML = '';

    if (data.length === 0) {
      container.innerHTML = '<div class="text-muted">No products found.</div>';
    } else {
      data.forEach(product => {
        const originalPrice = parseFloat(product.price);
        const discountPercent = parseFloat(product.discount);
        const saved = (originalPrice * discountPercent) / 100;
        const discountedPrice = originalPrice - saved;
        let unitLabel = product.stock_unit === 'kilogram' ? '1 kg' :
                        product.stock_unit === 'piece' ? '1 pic' :
                        product.stock_unit === 'liter' ? '1 ltr' : '1 unit';; 

        container.innerHTML += `
          <a href="/product/${product.product_id}">
            <div class="subcategory-card searchCard">
            <div class="discount-badge">${ discountPercent }% OFF</div>
              <img src="/images/${product.product_image}" alt="${product.product_name}">
              <h4>${product.product_name}</h4>
              <div class="product-info">
                <div class="price-box">
                  <div class="original-price">₹${originalPrice.toFixed(2)}</div>
                  <div class="discounted-price">₹${discountedPrice.toFixed(2)}</div>
                </div>
                <div class="you-save">You save ₹${saved.toFixed(2)}</div>
                <div class="unit">For ${unitLabel}</div>
              </div>
            </div>
          </a>
        `;
      });
    }

    container.style.display = 'flex';
    container.style.height = '400px';
    searchRes.style.display = 'flex'; 
  })
  .catch(err => {
    console.error('Search error:', err);
    container.style.display = 'none'; 
    searchRes.style.display = 'none'; 
  });

});

</script>

</body>
</html>
