<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Subcategories</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <style>
    .action-btns form {
      display: inline-block;
    }
    .action-btns button {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">All Subcategories</h2>

    <% if (typeof msg !== "undefined" && msg) { %>
      <div class="alert alert-success text-center">
        <%= msg %>
      </div>
    <% } %>

    <table class="table table-bordered table-hover text-center">
      <thead class="thead-dark">
        <tr>
          <th>SR.No</th>
          <th>Subcategory Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (subcategories && subcategories.length > 0) { %>
          <% subcategories.forEach((sub, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= sub.subcategory_name %></td>
              <td class="action-btns">
                <!-- Update -->
                <form action="/subcategory/update/<%= sub.subcategory_id %>" method="GET">
                  <button class="btn btn-warning btn-sm">Update</button>
                </form>

                <!-- Delete -->
                <form action="/deleteSubCat/<%= sub.subcategory_id %>" method="GET" onsubmit="return confirm('Are you sure you want to delete this subcategory?');">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>

                <!-- View Details -->
                <form action="/subcategory/details/<%= sub.subcategory_id %>" method="GET">
                  <button class="btn btn-info btn-sm">View Details</button>
                </form>

                <!-- View Products -->
                <form action="/viewProBySubCat/<%= sub.subcategory_id %>" method="GET">
                  <button class="btn btn-success btn-sm">View Products</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="3">No subcategories found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
